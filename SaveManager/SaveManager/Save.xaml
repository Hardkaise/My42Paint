<UserControl x:Class="SaveManager.Save"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveManager">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.6*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" x:Name="deleteButton" Content="Delete" HorizontalAlignment="Right" Margin="100,5,5,5" VerticalAlignment="Top" Width="75"/>
        <Image x:Name="image"  Grid.Column="0" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <Label x:Name="name" Grid.Column="0" Grid.Row="2" Content="Name" Margin="10,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
