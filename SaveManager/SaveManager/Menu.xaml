<UserControl x:Class="SaveManager.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveManager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="100">

    <Grid>
        <StackPanel HorizontalAlignment="Stretch">
            <Button x:Name="NewFileButton" Content="New File" Margin="10,10,10,10" VerticalAlignment="Top" Height="42" HorizontalAlignment="Stretch"  Click="NewFile"/>
            <Button x:Name="OpenFileButton" Content="Open File" Margin="10,10,10,10" VerticalAlignment="Top" Height="42" HorizontalAlignment="Stretch"  Click="OpenFile" />
            <Button x:Name="PrintButton" Content="Print" Margin="10,10,10,10" VerticalAlignment="Top" Height="42" HorizontalAlignment="Stretch"  Click="PrintFile" />
            <Button x:Name="ExportButton" Content="Export" Margin="10,10,10,10" VerticalAlignment="Top" Height="42" HorizontalAlignment="Stretch"  Click="ExportFile" />
            <Button x:Name="BackButton" Content="Back" Margin="10,10,10,10" VerticalAlignment="Top" Height="42" HorizontalAlignment="Stretch"  Click="BackFile" />
        </StackPanel>

    </Grid>
</UserControl>
