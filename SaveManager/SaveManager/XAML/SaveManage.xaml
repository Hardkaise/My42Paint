<UserControl x:Class="SaveManager.SaveManage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveManager"
             mc:Ignorable="d">
    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <local:Menu x:Name="localMenu"  Grid.Column="0" Grid.Row="0"/>
        <Border Margin="10,10,10,10" Grid.Column="1" Grid.Row="0" BorderBrush="Black" BorderThickness="2">
            <UniformGrid Background="Bisque" x:Name="SavesGrid"></UniformGrid>
        </Border>
    </Grid>
</UserControl>
