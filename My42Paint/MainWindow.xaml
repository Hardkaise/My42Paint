<Window x:Class="My42Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>
        <ToolBar Name="MyToolbar" DockPanel.Dock="Top" Height="50">
            <RadioButton Name="RectangleButton" 
                         Content="Rectangle" 
                         Height="50" 
                         Width="80" 
                         BorderBrush="Black" 
                         GroupName="ShapeGroup" 
                         Click="RectangleButton_OnClick"/>
            
            <RadioButton Name="LineButton" 
                Content="Line" 
                Height="50" 
                Width="80" 
                BorderBrush="Black" 
                GroupName="ShapeGroup" 
                Click="LineButton_OnClick"
                IsChecked="True"/>
            
            <RadioButton Name="EllipseButton" 
                Content="Ellipse" 
                Height="50" 
                Width="80" 
                BorderBrush="Black" 
                GroupName="ShapeGroup" 
                Click="EllipseButton_OnClick"/>
        </ToolBar>
        
        <Canvas Name="DrawingSheet" 
                Background="AliceBlue" 
                MouseDown="DrawingSheet_OnMouseDown" 
                MouseUp="DrawingSheet_OnMouseUp" 
                MouseMove="DrawingSheet_OnMouseMove"/>
    </DockPanel>
</Window>
